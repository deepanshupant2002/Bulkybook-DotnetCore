@model List<Category>

    <div class="container">
        <div class="row pt-3">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"> Create New Category</i>
                </a>
            </div>
        </div>

    </div>

    

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>Edit Category</th>
            <th>Delete Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id"  class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>  Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class = "btn btn-danger mx-2" asp-action="Delete" asp-route-id="@obj.Id" asp-controller="Category">
                            <i class="bi bi-trash-fill"></i>  Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>